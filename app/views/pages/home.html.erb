<div class="coverhome">
  <div class="coverhome-filter">
    <div class="container">
      <h1>Swiitcher news on demand</h1>

      <div class="search-form">
        <%= simple_form_for :search, url: posts_path, method: :get, :html => { :class => 'form-inline' } do |f| %>
        <%= f.input :query, label: false, placeholder: "Taper un titre" %>
        <%= f.submit "Rechercher",  class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container" id="home-articles">
  <div class="row">
    <h2>Derniers articles postés</h2>
    <ul>
      <% @posts.each do |post| %>
        <li class="col-xs-6 col-md-4 container-cards">
          <%= link_to post_path(post) do %>
          <div class="card-filter-home" style="background: url(<%= cloudinary_url post.cover %>); background-size:cover"></div>
          <div class="card-details">
          <h3><%= post.title %></h3>
          <h3>Posté par <%= post.user.first_name %></h3>
            <%= render 'favorites', post: post %>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>



