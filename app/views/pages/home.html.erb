<div class="coverhome">
  <div class="coverhome-filter">
    <div class="container">
      <h1>Swiitcher news on demand</h1>

      <div class="search-form">
        <%= simple_form_for :search, url: posts_path, method: :get, :html => { :class => 'form-inline' } do |f| %>
        <%= f.input :query, label: false, placeholder: "Taper un titre" %>
        <%= f.submit "Rechercher",  class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container" id="home-articles">
  <div class="row">
    <h2>Derniers articles post√©s</h2>
    <ul>
      <% @posts.each do |post| %>
        <li class="col-xs-6 col-md-4 container-cards">
          <%= link_to post_path(post) do %>
          <div class="card-filter-home" style="background: url(<%= cloudinary_url post.cover %>); background-size:cover">
            <h3><%= post.title %></h3>
            <% if current_user %>
              <div class="card-fav">
                <% if post.is_faved_by(current_user) %>
                  <%= link_to fav_path(post.is_faved_by(current_user)), method: :delete do %>
                    <i class="fa fa-heart faved faved-on"></i>
                  <% end %>
                <% else %>
                  <%= link_to post_favs_path(post), method: :post do %>
                    <i class="fa fa-heart faved faved-off"></i>
                  <% end %>
                <% end  %>
              </div>
            <% end %>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


