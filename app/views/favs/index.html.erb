      <tr>
        <th>
          Titre
        </th>
        <th>
          Auteur
        </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @favs.each do |fav| %>
      <tr>
        <td>
          <%= link_to post_path(fav.post) do %>
          <%= fav.post.title %>
          <% end %>
        </td>
        <td>
          PubliÃ© par <%= fav.post.user.first_name %>
          <%= fav.post.user.last_name[0] %>.
