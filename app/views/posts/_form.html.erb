<div class="container">
  <div class="row">
    <div class= "col-md-8 col-md-offset-2">
      <%= simple_form_for @post do |f| %>
      <%= f.error_notification %>
      <%= f.input :cover %>
      <%= cl_image_tag @post.cover, transformation: :thumbnail  %>
      <%= f.input :title, label: "Le titre" %>
      <%= f.input :content, label: "Votre article", placeholder: "Tapez ici votre article" %>
      <%= f.input :synopsis, label: "Le synopsis", placeholder: "Tapez votre synopsis min. 200 caractères" %>
      <%= f.input :status, label: "Status de l'article", collection: Post::STATUS, selected: Post::STATUS.first %>
      <%= f.input :category, label: "Catégorie", collection: Post::CATEGORIES, selected: Post::CATEGORIES.first %>
      <%= f.input :city, label: "Localisation", placeholder: "Liban, Paris" %>
      <%= f.input :price, label: "Prix", placeholder: "Choisir le prix de l'article" %>
      <%= f.input :licence, label: "Choisir la licence", collection: Post::LICENCE, selected: Post::LICENCE.first %>

      <%= f.submit "Créer l'article", class: "btn btn-primary text-center" %>

      <% end %>
    </div>
  </div>
</div>
